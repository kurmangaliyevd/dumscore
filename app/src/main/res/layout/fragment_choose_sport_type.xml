<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".sport_type.ChooseSportTypeFragment">

    <TextView
        android:id="@+id/what_sport_tv"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/what_sport_do_you_interest"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/sport_type_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/you_can_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="267dp"
        android:height="100dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/you_can_choose"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/what_sport_tv"
        app:layout_constraintTop_toBottomOf="@+id/what_sport_tv" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sport_type_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="6"
        tools:listitem="@layout/item_sport_type"
        tools:orientation="vertical"
        tools:scrollbars="vertical"
        tools:spanCount="3" />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#246BFD"
        android:fontFamily="@font/source_sans_pro"
        android:letterSpacing="0"
        android:text="@string/continue_btn"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:typeface="normal"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sport_type_rv" />

    <TextView
        android:id="@+id/skip_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@drawable/button_custom"
        android:fontFamily="@font/source_sans_pro"
        android:letterSpacing="0"
        android:text="@string/skip_btn"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:typeface="normal"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/continue_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>