<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_sign_in_background"

    tools:context=".SignInFragment">

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/line"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:minWidth="327dp"
        android:minHeight="64dp"
        android:textColorHint="#65656B"
        app:boxBackgroundColor="@color/dark_blue"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ !@#$%^*?"
            android:imeOptions="actionNext"
            android:paddingStart="1dp"
            android:paddingTop="23dp"
            android:paddingEnd="1dp"
            android:paddingBottom="23dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/email_textField"
            app:layout_constraintStart_toStartOf="@id/email_textField"
            app:layout_constraintTop_toTopOf="@id/email_textField" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:hint="@string/password"
        android:minWidth="327dp"
        android:minHeight="64dp"
        android:textColorHint="@color/grey"
        app:boxBackgroundColor="@color/dark_blue"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeWidth="0dp"
        app:endIconTint="@null"
        app:layout_constraintStart_toStartOf="@id/email_textField"
        app:layout_constraintTop_toBottomOf="@id/email_textField"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ !@#$%^*?"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingStart="1dp"
            android:paddingTop="23dp"
            android:paddingEnd="1dp"
            android:paddingBottom="23dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <RadioGroup
        android:id="@+id/remember_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toStartOf="@id/password_textField"
        app:layout_constraintTop_toBottomOf="@id/password_textField">

        <RadioButton
            android:id="@+id/remember_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/remember_me_button"
            android:paddingStart="13.2dp"
            android:paddingEnd="0dp"
            android:text="@string/remember_me"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/remember_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/remember_option" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="201dp"
        android:layout_height="66dp"
        android:layout_marginTop="85dp"
        android:backgroundTint="#246BFD"
        android:fontFamily="@font/source_sans_pro"
        android:letterSpacing="0"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:typeface="normal"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_textField" />

    <TextView
        android:id="@+id/don_t_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/source_sans_pro"
        android:paddingBottom="20dp"
        android:text="@string/don_t_have_account"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/sign_in"
        app:layout_constraintTop_toBottomOf="@id/sign_in" />

    <TextView
        android:id="@+id/sign_up_caps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/source_sans_pro"
        android:paddingBottom="20dp"
        android:text="@string/sign_up_caps"
        android:textAllCaps="true"
        android:textColor="#246BFD"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/don_t_have_account"
        app:layout_constraintEnd_toEndOf="@id/sign_in"
        app:layout_constraintStart_toEndOf="@id/don_t_have_account"
        app:layout_constraintTop_toTopOf="@id/don_t_have_account" />

</androidx.constraintlayout.widget.ConstraintLayout>